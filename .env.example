# Cloudinary configuration
CLOUD_NAME=your_cloudinary_cloud_name
CLOUD_API_KEY=your_cloudinary_api_key
CLOUD_API_SECRET=your_cloudinary_api_secret

# Database configuration
# Use a full MongoDB connection string, e.g.:
# mongodb+srv://<username>:<password>@<cluster>/<database>?retryWrites=true&w=majority
MONGO_URL=your_mongodb_connection_string

PORT=8080
# Session secret for signing cookies / sessions
# Use a long, random, and unique value in production.
SESSION_SECRET=your_strong_random_session_secret

# Admin configuration (used only in seeding script)
ADMIN_USERNAME=your_admin_username
ADMIN_EMAIL=your_admin_email@example.com
ADMIN_PASSWORD=your_strong_admin_password
