<% layout('/layouts/boilerplate') -%>

<section class="listings-page">
  <h3 class="mb-4">All Listings</h3>

  <div class="row g-4">
    <% for (let listing of listings) { %>
      <div class="col-sm-6 col-md-4 col-lg-3">
        <a href="/listings/<%= listing._id %>" class="listing-card-link">
          <div class="card listing-card h-100">
            <img 
              src="<%= listing.image.url %>" 
              class="card-img-top" 
              alt="<%= listing.image.filename %>"
            >
            <div class="card-body">
              <p class="card-title"><%= listing.title %></p>
              <p class="price">â‚¹ <%= listing.price.toLocaleString('en-IN') %> / night</p>
              <p class="country"><%= listing.country %></p>
            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div>
</section>