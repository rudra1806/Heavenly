        <% for(let listing of listings) { %>
            <li>
                <a href="http://localhost:8080/listings/<%= listing._id %>"><h4><%= listing.title %></h4></a>
                <img src="<%= listing.image.url %>" alt="<%= listing.image.filename %>" width="200"/>
