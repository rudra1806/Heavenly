<% layout('/layouts/boilerplate') -%>

<!-- HERO SECTION -->
<section class="luxury-hero">
    <div class="hero-background">
        <img src="https://images.unsplash.com/photo-1618168139401-733615cd8c8d?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Luxury Pool Paradise">
    </div>
    <div class="hero-overlay"></div>
    
    <div class="hero-content">
        <div class="hero-logo">
            <div class="hero-logo-icon">
                <i class="fa-solid fa-archway"></i>
            </div>
        </div>
        <h1 class="hero-title">Find Your Private Paradise</h1>
        <p class="hero-subtitle">
            Handpicked luxury stays across the world, crafted for comfort, beauty, and peace.
        </p>
        <div class="hero-buttons">
            <a href="/listings" class="btn-luxury-primary">
                Explore Destinations
            </a>
            <a href="/listings/new" class="btn-luxury-outline">
                List Your Haven
            </a>
        </div>
    </div>

    <div class="scroll-indicator">
        <i class="fa-solid fa-chevron-down"></i>
    </div>
</section>

<!-- TRUST & VALUE SECTION -->
<section class="trust-section">
    <div class="trust-container">
        <div class="section-header">
            <div class="section-subtitle">WHY HEAVENLY</div>
            <h2 class="section-title">Luxury Redefined</h2>
        </div>
        
        <div class="trust-grid">
            <div class="trust-card">
                <div class="trust-icon">
                    <i class="fa-solid fa-gem"></i>
                </div>
                <h3 class="trust-title">Curated Luxury Stays</h3>
                <p class="trust-description">
                    Every property is handpicked for exceptional beauty, comfort, and unforgettable experiences.
                </p>
            </div>

            <div class="trust-card">
                <div class="trust-icon">
                    <i class="fa-solid fa-shield"></i>
                </div>
                <h3 class="trust-title">Verified & Secure</h3>
                <p class="trust-description">
                    All listings are thoroughly verified. Your safety and privacy are our highest priority.
                </p>
            </div>

            <div class="trust-card">
                <div class="trust-icon">
                    <i class="fa-solid fa-star"></i>
                </div>
                <h3 class="trust-title">Top Rated Experiences</h3>
                <p class="trust-description">
                    Browse authentic reviews from guests who've lived the dream in our curated spaces.
                </p>
            </div>

            <div class="trust-card">
                <div class="trust-icon">
                    <i class="fa-solid fa-concierge-bell"></i>
                </div>
                <h3 class="trust-title">24/7 Concierge Support</h3>
                <p class="trust-description">
                    Our dedicated team is always available to ensure your stay is nothing short of perfect.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- FEATURED DESTINATIONS -->
<section class="destinations-section">
    <div class="destinations-container">
        <div class="section-header">
            <div class="section-subtitle">EXPLORE</div>
            <h2 class="section-title">Featured Destinations</h2>
        </div>

        <div class="destinations-grid">
            <a href="/listings" class="destination-card">
                <img src="https://images.unsplash.com/photo-1566073771259-6a8506099945?w=800&q=80" alt="Tropical Escapes">
                <div class="destination-overlay">
                    <h3 class="destination-name">Tropical Escapes</h3>
                    <div class="destination-explore">
                        Explore <i class="fa-solid fa-arrow-right"></i>
                    </div>
                </div>
            </a>

            <a href="/listings" class="destination-card">
                <img src="https://images.unsplash.com/photo-1613490493576-7fde63acd811?w=800&q=80" alt="Mountain Retreats">
                <div class="destination-overlay">
                    <h3 class="destination-name">Mountain Retreats</h3>
                    <div class="destination-explore">
                        Explore <i class="fa-solid fa-arrow-right"></i>
                    </div>
                </div>
            </a>

            <a href="/listings" class="destination-card">
                <img src="https://images.unsplash.com/photo-1512917774080-9991f1c4c750?w=800&q=80" alt="Urban Luxury">
                <div class="destination-overlay">
                    <h3 class="destination-name">Urban Luxury</h3>
                    <div class="destination-explore">
                        Explore <i class="fa-solid fa-arrow-right"></i>
                    </div>
                </div>
            </a>

            <a href="/listings" class="destination-card">
                <img src="https://images.unsplash.com/photo-1506905925346-21bda4d32df4?w=800&q=80" alt="Lakeside Serenity">
                <div class="destination-overlay">
                    <h3 class="destination-name">Lakeside Serenity</h3>
                    <div class="destination-explore">
                        Explore <i class="fa-solid fa-arrow-right"></i>
                    </div>
                </div>
            </a>
        </div>
    </div>
</section>

<!-- EXPERIENCE SECTION -->
<section class="experience-section">
    <div class="experience-container">
        <div class="experience-image">
            <img src="https://images.unsplash.com/photo-1600607687939-ce8a6c25118c?w=800&q=80" alt="Luxury Interior">
        </div>
        
        <div class="experience-content">
            <div class="section-subtitle">THE HEAVENLY DIFFERENCE</div>
            <h2 class="section-title">Experience Stays Beyond Hotels</h2>
            <p class="experience-text">
                Heavenly offers handpicked spaces that feel like home but live like a dream. 
                Every destination is chosen for beauty, comfort, and unforgettable moments. 
                We believe luxury isn't just about opulence—it's about finding peace, 
                connection, and memories that last a lifetime.
            </p>
            <a href="/listings" class="btn-luxury-text">
                Start Exploring <i class="fa-solid fa-arrow-right"></i>
            </a>
        </div>
    </div>
</section>

<!-- TESTIMONIAL SECTION -->
<section class="testimonial-section">
    <div class="testimonial-bg">
        <img src="https://images.unsplash.com/photo-1506905925346-21bda4d32df4?w=1920&q=80" alt="Background">
    </div>
    
    <div class="testimonial-container">
        <div class="testimonial-stars">
            <i class="fa-solid fa-star"></i>
            <i class="fa-solid fa-star"></i>
            <i class="fa-solid fa-star"></i>
            <i class="fa-solid fa-star"></i>
            <i class="fa-solid fa-star"></i>
        </div>
        <blockquote class="testimonial-quote">
            "Our stay felt like a dream. Heavenly made luxury simple and unforgettable."
        </blockquote>
        <p class="testimonial-author">— Sophia, Italy</p>
    </div>
</section>

<!-- CALL TO ACTION -->
<section class="cta-section">
    <div class="cta-background">
        <img src="https://images.unsplash.com/photo-1582268611958-ebfd161ef9cf?w=1920&q=80" alt="Paradise Awaits">
    </div>
    <div class="cta-overlay"></div>
    
    <div class="cta-content">
        <h2 class="cta-title">Your Paradise Is Waiting</h2>
        <div class="cta-buttons">
            <a href="/listings" class="btn-luxury-primary">
                Explore Paradise
            </a>
            <a href="/listings/new" class="btn-luxury-outline">
                Become a Host
            </a>
        </div>
    </div>
</section>
