<% layout('/layouts/boilerplate') -%>

<style>
  .btn-gradient:hover { transform: translateY(-2px); box-shadow: 0 6px 20px rgba(129, 140, 248, 0.4) !important; }
  .btn-outline-dark:hover { transform: translateY(-2px); background: #212529; color: #fff; }
</style>

<div class="container d-flex align-items-center justify-content-center" style="min-height: 70vh;">
  <div class="text-center">
    <i class="fa-solid fa-circle-exclamation text-danger mb-3" style="font-size: 4rem;"></i>
    
    <h1 class="display-3 fw-bold text-dark"><%= statusCode %></h1>
    <p class="fs-4 text-secondary mb-2"><%= message %></p>
    <p class="text-muted mb-4">The page you're looking for might not exist or something went wrong.</p>
    
    <div class="d-flex gap-3 justify-content-center">
      <a href="/listings" class="btn btn-gradient px-4 py-2 text-white rounded-3 shadow-sm" style="background: linear-gradient(135deg, #c084fc, #818cf8); transition: all 0.2s ease;">
        <i class="fa-solid fa-arrow-left me-2"></i>Back to Listings
      </a>
      <a href="/" class="btn btn-outline-dark px-4 py-2 rounded-3" style="transition: all 0.2s ease;">
        <i class="fa-solid fa-house me-2"></i>Go Home
      </a>
    </div>
  </div>
</div>