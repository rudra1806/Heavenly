<% layout('/layouts/boilerplate') -%>

<div class="error-page">
  <div class="error-content">
    <i class="fa-solid fa-circle-exclamation error-icon"></i>
    <h1 class="error-code"><%= statusCode %></h1>
    <p class="error-message"><%= message %></p>
    <p class="error-description">The page you're looking for might not exist or something went wrong.</p>
    <div class="error-actions">
      <a href="/listings" class="btn-error-primary">
        <i class="fa-solid fa-arrow-left"></i>Back to Listings
      </a>
      <a href="/" class="btn-error-secondary">
        <i class="fa-solid fa-house"></i>Go Home
      </a>
    </div>
  </div>
</div>