<% layout('/layouts/boilerplate') -%>

    <div class="admin-panel">
        <!-- Admin Header -->
        <div class="admin-header">
            <div class="admin-header-content">
                <div class="admin-title-group">
                    <a href="/admin" class="admin-back-link">
                        <i class="fa-solid fa-arrow-left"></i>
                    </a>
                    <div>
                        <h1 class="admin-title">Review Management</h1>
                        <p class="admin-subtitle">
                            <%= reviews.length %> review<%= reviews.length !==1 ? 's' : '' %> found
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Search Bar -->
        <div class="admin-search-bar">
            <form action="/admin/reviews" method="GET" class="admin-search-form">
                <div class="search-input-wrapper">
                    <i class="fa-solid fa-magnifying-glass search-icon"></i>
                    <input type="text" name="search" placeholder="Search by review content..."
                        value="<%= searchQuery %>" class="admin-search-input">
                </div>
                <button type="submit" class="admin-search-btn">Search</button>
                <% if (searchQuery) { %>
                    <a href="/admin/reviews" class="admin-clear-btn">Clear</a>
                    <% } %>
            </form>
        </div>

        <!-- Reviews Table -->
        <div class="admin-table-wrapper">
            <% if (reviews.length===0) { %>
                <div class="admin-empty">
                    <i class="fa-solid fa-star-half-stroke"></i>
                    <h3>No Reviews Found</h3>
                    <p>No reviews match your search criteria.</p>
                </div>
                <% } else { %>
                    <table class="admin-table">
                        <thead>
                            <tr>
                                <th>Rating</th>
                                <th>Comment</th>
                                <th>Author</th>
                                <th>Listing</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% reviews.forEach(review=> { %>
                                <tr>
                                    <td>
                                        <div class="table-rating">
                                            <% for (let i=0; i < review.rating; i++) { %>
                                                <i class="fa-solid fa-star"></i>
                                                <% } %>
                                                    <% for (let i=review.rating; i < 5; i++) { %>
                                                        <i class="fa-regular fa-star"></i>
                                                        <% } %>
                                        </div>
                                    </td>
                                    <td class="table-comment">
                                        <%= review.comment.substring(0, 80) %>
                                            <%= review.comment.length> 80 ? '...' : '' %>
                                    </td>
                                    <td class="table-author">
                                        <%= review.author ? review.author.username : 'Deleted User' %>
                                    </td>
                                    <td>
                                        <% if (review.listing) { %>
                                            <a href="/listings/<%= review.listing._id %>" class="table-listing-link">
                                                <%= review.listing.title.substring(0, 30) %>
                                                    <%= review.listing.title.length> 30 ? '...' : '' %>
                                            </a>
                                            <% } else { %>
                                                <span class="table-muted">Unknown Listing</span>
                                                <% } %>
                                    </td>
                                    <td>
                                        <form action="/admin/reviews/<%= review._id %>?_method=DELETE" method="POST"
                                            class="delete-form"
                                            onsubmit="return confirm('Are you sure you want to delete this review?');">
                                            <button type="submit" class="admin-delete-btn">
                                                <i class="fa-solid fa-trash"></i> Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                    <% } %>
        </div>
    </div>