<% layout('/layouts/boilerplate') -%>

    <div class="admin-panel">
        <!-- Admin Header -->
        <div class="admin-header">
            <div class="admin-header-content">
                <div class="admin-title-group">
                    <a href="/admin" class="admin-back-link">
                        <i class="fa-solid fa-arrow-left"></i>
                    </a>
                    <div>
                        <h1 class="admin-title">User Management</h1>
                        <p class="admin-subtitle">
                            <%= users.length %> user<%= users.length !==1 ? 's' : '' %> found
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Search Bar -->
        <div class="admin-search-bar">
            <form action="/admin/users" method="GET" class="admin-search-form">
                <div class="search-input-wrapper">
                    <i class="fa-solid fa-magnifying-glass search-icon"></i>
                    <input type="text" name="search" placeholder="Search by username or email..."
                        value="<%= searchQuery %>" class="admin-search-input">
                </div>
                <button type="submit" class="admin-search-btn">Search</button>
                <% if (searchQuery) { %>
                    <a href="/admin/users" class="admin-clear-btn">Clear</a>
                    <% } %>
            </form>
        </div>

        <!-- Users Table -->
        <div class="admin-table-wrapper">
            <% if (users.length===0) { %>
                <div class="admin-empty">
                    <i class="fa-solid fa-users-slash"></i>
                    <h3>No Users Found</h3>
                    <p>No users match your search criteria.</p>
                </div>
                <% } else { %>
                    <table class="admin-table">
                        <thead>
                            <tr>
                                <th>User</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach(user=> { %>
                                <tr>
                                    <td>
                                        <div class="table-user">
                                            <div class="table-avatar">
                                                <%= user.username.charAt(0).toUpperCase() %>
                                            </div>
                                            <span class="table-username">
                                                <%= user.username %>
                                            </span>
                                        </div>
                                    </td>
                                    <td class="table-email">
                                        <%= user.email %>
                                    </td>
                                    <td>
                                        <% if (user.role==='admin' ) { %>
                                            <span class="role-badge badge-admin">
                                                <i class="fa-solid fa-shield-halved"></i> Admin
                                            </span>
                                            <% } else { %>
                                                <span class="role-badge badge-user">
                                                    <i class="fa-solid fa-user"></i> User
                                                </span>
                                                <% } %>
                                    </td>
                                    <td>
                                        <% if (!user._id.equals(currentUser._id)) { %>
                                            <form action="/admin/users/<%= user._id %>?_method=DELETE" method="POST"
                                                class="delete-form"
                                                onsubmit="return confirm('Are you sure you want to delete this user and ALL their data? This cannot be undone!');">
                                                <button type="submit" class="admin-delete-btn">
                                                    <i class="fa-solid fa-trash"></i> Delete
                                                </button>
                                            </form>
                                            <% } else { %>
                                                <span class="table-muted">You (Admin)</span>
                                                <% } %>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                    <% } %>
        </div>
    </div>