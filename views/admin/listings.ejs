<% layout('/layouts/boilerplate') -%>

    <div class="admin-panel">
        <!-- Admin Header -->
        <div class="admin-header">
            <div class="admin-header-content">
                <div class="admin-title-group">
                    <a href="/admin" class="admin-back-link">
                        <i class="fa-solid fa-arrow-left"></i>
                    </a>
                    <div>
                        <h1 class="admin-title">Listing Management</h1>
                        <p class="admin-subtitle">
                            <%= listings.length %> listing<%= listings.length !==1 ? 's' : '' %> found
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Search Bar -->
        <div class="admin-search-bar">
            <form action="/admin/listings" method="GET" class="admin-search-form">
                <div class="search-input-wrapper">
                    <i class="fa-solid fa-magnifying-glass search-icon"></i>
                    <input type="text" name="search" placeholder="Search by title, location, or country..."
                        value="<%= searchQuery %>" class="admin-search-input">
                </div>
                <button type="submit" class="admin-search-btn">Search</button>
                <% if (searchQuery) { %>
                    <a href="/admin/listings" class="admin-clear-btn">Clear</a>
                    <% } %>
            </form>
        </div>

        <!-- Listings Table -->
        <div class="admin-table-wrapper">
            <% if (listings.length===0) { %>
                <div class="admin-empty">
                    <i class="fa-solid fa-building-circle-xmark"></i>
                    <h3>No Listings Found</h3>
                    <p>No listings match your search criteria.</p>
                </div>
                <% } else { %>
                    <table class="admin-table">
                        <thead>
                            <tr>
                                <th>Listing</th>
                                <th>Location</th>
                                <th>Price</th>
                                <th>Owner</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% listings.forEach(listing=> { %>
                                <tr>
                                    <td>
                                        <div class="table-listing">
                                            <div class="table-thumb">
                                                <img src="<%= listing.image.url %>" alt="<%= listing.title %>">
                                            </div>
                                            <a href="/listings/<%= listing._id %>" class="table-listing-title">
                                                <%= listing.title %>
                                            </a>
                                        </div>
                                    </td>
                                    <td class="table-location">
                                        <i class="fa-solid fa-location-dot"></i>
                                        <%= listing.location %>, <%= listing.country %>
                                    </td>
                                    <td class="table-price">â‚¹<%= listing.price.toLocaleString() %>
                                    </td>
                                    <td class="table-owner">
                                        <%= listing.owner ? listing.owner.username : 'Unknown' %>
                                    </td>
                                    <td>
                                        <div class="table-actions">
                                            <a href="/listings/<%= listing._id %>/edit" class="admin-edit-btn">
                                                <i class="fa-solid fa-pen"></i> Edit
                                            </a>
                                            <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST"
                                                class="delete-form"
                                                onsubmit="return confirm('Are you sure you want to delete this listing? This cannot be undone!');">
                                                <button type="submit" class="admin-delete-btn">
                                                    <i class="fa-solid fa-trash"></i> Delete
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                    <% } %>
        </div>
    </div>