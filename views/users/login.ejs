<% layout('/layouts/boilerplate') -%>

<div class="auth-container">
    <div class="auth-split">
        <!-- Left Side - Welcome Message -->
        <div class="auth-welcome">
            <div class="auth-welcome-content">
                <div class="welcome-icon">
                    <i class="fa-solid fa-archway"></i>
                </div>
                <h1>Welcome Back to <span>Heavenly</span></h1>
                <p>Sign in to access your account and continue exploring paradise-like places around the world.</p>
                <div class="welcome-features">
                    <div class="feature">
                        <i class="fa-solid fa-bookmark"></i>
                        <span>Your saved stays</span>
                    </div>
                    <div class="feature">
                        <i class="fa-solid fa-clock-rotate-left"></i>
                        <span>Booking history</span>
                    </div>
                    <div class="feature">
                        <i class="fa-solid fa-bell"></i>
                        <span>Personalized picks</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Side - Form -->
        <div class="auth-form-section">
            <div class="auth-card">
                <div class="auth-header">
                    <h2>Log In</h2>
                    <p>Welcome back! Please enter your details</p>
                </div>
                
                <form action="/login" method="POST" class="auth-form needs-validation" novalidate>
                    <div class="form-group">
                        <label for="username">
                            <i class="fa-solid fa-user"></i> Username
                        </label>
                        <input 
                            type="text" 
                            id="username" 
                            name="username" 
                            class="form-control" 
                            placeholder="Enter your username"
                            required
                            autocomplete="username"
                        />
                        <div class="invalid-feedback">Please enter your username.</div>
                    </div>

                    <div class="form-group">
                        <label for="password">
                            <i class="fa-solid fa-lock"></i> Password
                        </label>
                        <input 
                            type="password" 
                            id="password" 
                            name="password" 
                            class="form-control" 
                            placeholder="Enter your password"
                            required
                            autocomplete="current-password"
                        />
                        <div class="invalid-feedback">Please enter your password.</div>
                    </div>

                    <div class="form-actions">
                        <button type="submit">
                            Log In <i class="fa-solid fa-arrow-right"></i>
                        </button>
                    </div>
                </form>

                <div class="auth-footer">
                    <p>Don't have an account? <a href="/signup">Sign up</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
